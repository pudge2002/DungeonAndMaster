<prism:PrismApplication x:Class="LightningMcQueen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LightningMcQueen"
                        
             xmlns:view="clr-namespace:LightningMcQueen.Views"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:viewModel="clr-namespace:LightningMcQueen.ViewModels">
             
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:ControlViewModel}">
                <view:ControlView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CamsViewModel}">
                <view:CamsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AboutViewModel}">
                <view:AboutView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
