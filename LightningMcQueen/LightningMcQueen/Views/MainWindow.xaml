            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#6698e4" Grid.ColumnSpan="4">

            </Border>
            <TextBlock Text="Борт агломашины"
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
           Foreground="White"
           FontSize="28" Grid.ColumnSpan="2" Margin="10,0,0,0" Width="433" />
            <Image Grid.Column="1" HorizontalAlignment="Left" Height="244" Margin="10,179,0,0" Grid.Row="1" VerticalAlignment="Top" Width="456" Grid.ColumnSpan="2"/>
