        AllowsTransparency="True"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstace viewModel:MainWindowViewModel}"
        >
        <Border CornerRadius="20">
        <DockPanel  Background="Transparent">
        <components:Header DockPanel.Dock="Top"/>
        <Border CornerRadius="0,0,20,20" BorderBrush="Azure" BorderThickness="2">
            <Grid>
                <ContentControl Grid.Row="1"
                     Grid.Column="1"
                     prism:RegionManager.RegionName="MainRegion"/>
            </Grid>

        </Border>
        </DockPanel>
        </Border>

