<Window x:Class="LightningMcQueen.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:viewModel="clr-namespace:LightningMcQueen.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:components="clr-namespace:LightningMcQueen.Components"
        Title="Агломашина"
        Height="800" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        mc:Ignorable="d"
         d:DataContext="{d:DesignInstace viewModel:MainWindowViewModel}"
         > 
    <Border CornerRadius="20">
        <DockPanel  Background="Transparent">
            <components:Header DockPanel.Dock="Top"/>
            <Border CornerRadius="0,0,20,20" BorderBrush="Azure" BorderThickness="2">
                <Grid>
                    <ContentControl Grid.Row="1"
                     Grid.Column="1"
                     prism:RegionManager.RegionName="MainRegion"/>
                </Grid>

            </Border>
        </DockPanel>
    </Border>
</Window>